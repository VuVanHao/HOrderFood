<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:weightSum="2"
    android:padding="8dp"
    >


    <RelativeLayout
        android:background="@drawable/bg_item_food"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:layout_weight="2">



        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/imgFoodItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/imgtitlelogin"/>

        <TextView
            android:layout_above="@+id/tvPriceFoodItem"
            android:id="@+id/tvNameFoodItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:background="#888888"
            android:text="Combo Chó"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvPriceFoodItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:alpha="0.8"
            android:background="#EA9898"
            android:text="120000"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/arrow_top"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/tvNameFoodItem"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="-20dp"
            android:background="@drawable/arrow_top" />

        <LinearLayout
            android:animateLayoutChanges="true"
            android:layout_above="@+id/arrow_top"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="21dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/btnSuaFoodItem"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sửa"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ACA5A5"/>

            <TextView
                android:id="@+id/btnXoaFoodItem"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xóa"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>