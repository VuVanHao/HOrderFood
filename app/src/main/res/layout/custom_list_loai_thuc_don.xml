<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/white"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:animateLayoutChanges="true"
    >


    <RelativeLayout
        android:background="@drawable/bg_list_type"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_centerVertical="true">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgItemLoaiThucDon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

                <TextView
                    android:background="@drawable/bg_list_loai_thuc_don"
                    android:id="@+id/tvNameTypeFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Combo 2 người"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:padding="10dp"
                    android:layout_marginStart="30dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/arrow_up"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/arrow_left"
                    android:layout_toRightOf="@+id/tvNameTypeFood"
                    android:layout_marginStart="-15dp"
                    android:layout_marginTop="20dp"/>

                <LinearLayout
                    android:animateLayoutChanges="true"
                    android:layout_toRightOf="@+id/arrow_up"
                    android:layout_marginTop="21dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/btnSuaItem"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sửa"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ACA5A5"/>

                    <TextView
                        android:id="@+id/btnXoaItem"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xóa"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>



    </RelativeLayout>


</RelativeLayout>