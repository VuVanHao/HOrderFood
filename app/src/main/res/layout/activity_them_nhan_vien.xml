<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityThemNhanVien"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgGoToBackListStaff"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        />

    <TextView
        android:textColor="@color/teal_700"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm nhân viên"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên đăng nhập"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="35dp"
        android:layout_marginStart="25dp"/>

    <EditText
        android:id="@+id/tvUsernameAddStaff"
        android:layout_width="match_parent"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_edittext_login"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"/>

    <EditText
        android:inputType="textPassword"
        android:id="@+id/tvPasswordAddStaff"
        android:layout_width="match_parent"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_edittext_login"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giới tính"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"/>

    <RadioGroup
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbNamAddStaff"
            android:layout_marginEnd="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nam"
            android:textColor="@color/black"
            android:checked="true"
            android:textSize="20sp"
            />

        <RadioButton
            android:id="@+id/rbNuAddStaff"
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nữ"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày sinh"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"/>

    <EditText
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/tvDateAddStaff"
        android:layout_width="match_parent"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_edittext_login"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CMND"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"/>

    <EditText
        android:id="@+id/tvCMNDAddStaff"
        android:layout_width="match_parent"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_edittext_login"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"/>

    <Button
        android:id="@+id/btnThemNhanVien"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF8C00"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm nhân viên"/>

    <Button
        android:id="@+id/btnGoToBackListStaff"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hủy"/>

</LinearLayout>